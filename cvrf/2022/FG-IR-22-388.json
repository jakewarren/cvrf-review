          "@Title": "Summary",
          "@Type": "Summary"
        },
        {
          "#text": "None",
          "@Ordinal": "2",
          "@Title": "Description",
          "@Type": "General"
        },
        {
          "#text": "Denial of service",
          "@Ordinal": "3",
          "@Title": "Impact",
          "@Type": "General"
        },
        {
          "#text": "At leastFortiRecorder 7.0 all versions are not affectedFortiRecorder version 6.4.0 through 6.4.3FortiRecorder version 6.0.0 through 6.0.11FortiRecorder 2.7 all versions are not affected",
          "@Ordinal": "4",
          "@Title": "Affected Products",
          "@Type": "General"
        },
        {
