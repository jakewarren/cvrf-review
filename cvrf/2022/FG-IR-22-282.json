    "cvrf:DocumentNotes": {
      "cvrf:Note": [
        {
          "#text": "An improper certificate validation vulnerability [CWE-295] in FortiClientWindows, FortiClientLinux and FortiClientMac may allow a remote and unauthenticated attacker to perform a Man-in-the-Middle attack on the communication channel between the FortiGate and the FortiClient during the ZTNA tunnel creation",
          "@Ordinal": "1",
          "@Title": "Summary",
          "@Type": "Summary"
        },
