    "cvrf:DocumentNotes": {
      "cvrf:Note": [
        {
          "#text": "An insufficient session expiration vulnerability [CWE- 613] in FortiClientEMS may allow an attacker to reuse the unexpired admin user session IDs to gain admin privileges, should the attacker be able to obtain that session ID (via other, hypothetical attacks)",
          "@Ordinal": "1",
          "@Title": "Summary",
          "@Type": "Summary"
        },
        {
          "#text": "Escalation of privilege",
          "@Ordinal": "2",
          "@Title": "Impact",
          "@Type": "General"
        },
        {
          "#text": "FortiClientEMS version 6.2.8 and below.FortiClientEMS version 6.4.2 and below.",
          "@Ordinal": "3",
          "@Title": "Affected Products",
          "@Type": "General"
        },
        {
          "#text": "Please upgrade to FortiClientEMS version 6.2.9 or above.Please upgrade to FortiClientEMS version 6.4.3 or above.Please upgrade to FortiClientEMS version 7.0.0 or above.",
          "@Ordinal": "4",
          "@Title": "Solutions",
          "@Type": "General"
        }
